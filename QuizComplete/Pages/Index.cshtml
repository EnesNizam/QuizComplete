@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="card">
  <h3 class="card-header text-center font-weight-bold text-uppercase py-4">
    Sınav Listesi
  </h3>
  <div class="card-body">
    <!-- The form that remove buttons will use -->
    <form id="remove" method="post"></form>

    <div id="table" class="table-editable">
      <span class="table-add float-right mb-3 mr-2">
        <a href="#!" class="text-success">
          <i class="fas fa-plus fa-2x" aria-hidden="true"></i>
        </a>
      </span>
      <table
        class="table table-bordered table-responsive-md table-striped text-center"
      >
        <thead>
          <tr>
            <th class="text-center">Id</th>
            <th class="text-center">Başlık</th>
            <th class="text-center">Açıklama</th>
            
          </tr>
        </thead>
        <tbody>
          @foreach (var quiz in Model.questionLists) {
          <tr>
            <td class="pt-3-half">@quiz.ID</td>
            <td class="pt-3-half">@quiz.Header</td>
            <td class="pt-3-half">@quiz.Explanation</td>
        
            <td>
              <span class="table-remove">
                 <a onclick="return confirm('Are you sure you want to delete this?')" asp-page="index" asp-page-handler="delete" asp-route-id="@quiz.ID">Delete</a>
              </span>
            </td>
              <td>
              <span class="table-edit">
                 <a  asp-page="/Quiz"  asp-route-id="@quiz.ID">Sınav Başlat</a>
              </span>
            </td>
          </tr>
          }
        </tbody>
      </table>
    </div>
  </div>
</div>
